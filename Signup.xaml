        mc:Ignorable="d"
        Title="Egzamino užduotis" Height="450" Width="400"
        ResizeMode="NoResize">
    <Grid>
        <Button Content="Signup" FontSize="18" Name="gosignup"
                HorizontalAlignment="Center" Margin="0,373,0,0" VerticalAlignment="Top" Height="28" Width="90"
