        <TextBox Name="UserText" FontSize="18" HorizontalAlignment="Center" Margin="0,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="31"/>
        <Label Content="Username" FontSize="14" 
               HorizontalAlignment="Left" Margin="110,98,0,0" VerticalAlignment="Top" Width="75"/>

        <TextBox Name="PassText" FontSize="18" HorizontalAlignment="Center" Margin="0,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="31"/>
        <Label Content="Password" FontSize="14" 
               HorizontalAlignment="Left" Margin="110,160,0,0" VerticalAlignment="Top" Width="75"/>

        <Label Name="Mess" FontSize="14" HorizontalAlignment="Center" Margin="0,271,0,0" VerticalAlignment="Top" Width="180"/>
        <Label Content="One use account" FontSize="25" HorizontalAlignment="Left" Margin="97,38,0,0" VerticalAlignment="Top" Height="55" Width="240"/>

